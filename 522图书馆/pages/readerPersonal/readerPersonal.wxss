/* pages/read/read.wxss */
page{
  background: #f6f6f6;
}
.list{
  padding: 30rpx;
  background: #FFF;
  margin-top: 10rpx;
}
.author{
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.author image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.big-pic{
  width: 690rpx;
  height: 300rpx;
  margin: 24rpx 0;
}
.tit{
  font-size: 40rpx;
  line-height: 52rpx;
}
.tit text{
  font-size: 24rpx;
  background: #bc7878;
  color: #FFF;
  display: inline-block;
  padding: 0 10rpx;
  border-radius: 20rpx;
  position: relative;
  top: -2px;
  line-height: 44rpx;
  height: 44rpx;
}

.intro{
  line-height: 44rpx;
  font-size: 28rpx;
  color: #7f7f7f;
  margin-top:30rpx; 
}

.botm-cont{
  font-size: 28rpx;
  color: #c0c0c0;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}